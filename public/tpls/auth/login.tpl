<div id="auth" class="auth-login" data-auth_action="toggle">
    <img class="auth_avatar" src="{noava:}">
    <span class="auth_name">Войти</span>
    <div class="bubble-white" data-auth="menu">
        {auth_link:}<a class="authLogin_link-{_key:}" href="{url:}">{text:}</a>{:auth_link}
        <p class="authLogin_hint">Авторизовавшись, можно будет вести список избранных статей и оставлять комментарии</p>
    </div>
</div>
